#:kivy 2.2.1
#:set OUTLINE_RECTANGLE 3
#:set TITLE_SIZE_HINT_WIDTH 0.25

<-ThemeLayout>:

    fit_mode: "cover"

    canvas:
        Color:
            rgba: self.color
        StencilPush
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [40*self.font_ratio]
        StencilUse
        Rectangle:
            texture: self.texture
            size: self.norm_image_size
            pos: self.center_x - self.norm_image_size[0] / 2., self.center_y - self.norm_image_size[1] / 2.
        StencilUnUse
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [40*self.font_ratio]
        StencilPop

    canvas.after:
        Color:
            rgba: (0,0,0,1)
        Line:
            width: OUTLINE_RECTANGLE*root.font_ratio
            rounded_rectangle: (self.pos[0]-OUTLINE_RECTANGLE/2, self.pos[1]-OUTLINE_RECTANGLE/2, self.size[0]+OUTLINE_RECTANGLE,self.size[1]+OUTLINE_RECTANGLE, 40*root.font_ratio, 40*root.font_ratio, 40*root.font_ratio, 40*root.font_ratio)


    RelativeLayout:
        pos: root.pos
        size: root.size
        # Theme title
        Label:
            text: root.theme_title
            pos_hint: {"center_x":0.175,"center_y":0.75}
            size_hint: (TITLE_SIZE_HINT_WIDTH, 0.5)
            font_size: root.font_ratio * root.font_size
            text_size: (self.width,None)
            font_name: root.text_font_name
            outline_width: TITLE_OUTLINE_WIDTH
            outline_color: TITLE_OUTLINE_COLOR
            color: (0,0,0,1)
            halign: "center"
            valign: "center"
        
        CustomButton:
            text: "Preview"
            pos_hint: {"center_x":0.175,"center_y":0.25}
            size_hint: (TITLE_SIZE_HINT_WIDTH, 0.3)
            font_size: root.font_ratio * root.font_size * 0.8
            radius:10*root.font_ratio
            release_function: root.open_preview

        RelativeLayout:
            pos_hint: {"x": 0.35, "y": 0}
            size_hint: (1 - 0.05*4 - TITLE_SIZE_HINT_WIDTH - primary_color_bubble.width/(root.width+1), 1)
            BuyButton:
                id: buy_image_button
                button_title: "Image"
                # pos_hint: {"center_x":0.45, "center_y":0.5}
                pos_hint: {"x":0.0, "center_y":0.5}
                # size_hint: (0.225,0.8)
                size_hint: (0.45, 0.8)
                font_size: 16
                font_ratio: root.font_ratio
                has_bought: root.has_bought_image
                is_using: root.is_using_image
                release_function: root.click_image

            BuyButton:
                id: buy_colors_button
                button_title: "Colors"
                # pos_hint: {"center_x":0.75, "center_y":0.5}
                pos_hint: {"right": 1, "center_y": 0.5}
                # size_hint: (0.225,0.8)
                size_hint: (0.45, 0.8)
                font_size: 16
                font_ratio: root.font_ratio
                has_bought: root.has_bought_colors
                is_using: root.is_using_colors
                release_function: root.click_colors

        RoundButton:
            id: primary_color_bubble
            pos_hint: {"right":0.95, "center_y":0.66}
            size_hint: (None, 0.21)
            width: self.height
            color: root.primary_color
            disable_button: True
            line_width: 1.5
            font_ratio: root.font_ratio

        RoundButton:
            id: secondary_color_bubble
            pos_hint: {"right":0.95, "center_y":0.33}
            size_hint: (None, 0.21)
            width: self.height
            color: root.secondary_color
            disable_button: True
            line_width: 1.5
            font_ratio: root.font_ratio

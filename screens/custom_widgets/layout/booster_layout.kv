#:kivy 2.2.1
#:set AMOUNT_FONT_SIZE 15

<BoosterLayout>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos:(0,0)
            size:self.size
            radius:[12*self.font_ratio,]

    # Booster title
    Label:
        text: root.booster_title
        pos_hint: {"center_x":0.5,"center_y":0.85}
        size_hint: (0.8,0.2)
        font_size: root.font_ratio * root.font_size
        text_size: (self.width,None)
        font_name: root.text_font_name
        color: (0,0,0,1)
        halign: "center"
        valign: "center"

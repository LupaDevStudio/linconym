#:kivy 2.2.1

<ImagesCreditLayout>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos:(0, 0)
            size: self.size
            radius:[self.radius * self.font_ratio]

    # Credits image
    Image:
        id: image_image
        source: PATH_ICONS + root.current_image + ".png" if root.icon_mode else PATH_BACKGROUNDS + root.current_image + ".jpg"
        size_hint: None, 0.85
        width: self.height
        pos_hint: {"x": 0.025, "center_y": 0.5}

    # Image title
    Label:
        text: root.image_title
        pos_hint: {"x": 0.05 + image_image.width/root.width,"center_y":0.5}
        size_hint: 1 - 0.07 - image_image.width/root.width, 1
        font_size: root.font_ratio * root.font_size
        font_name: root.text_font_name
        color: (0,0,0,1)
        text_size: (self.width, None)
        halign: "left"
        valign: "center"

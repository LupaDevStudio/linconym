#:kivy 2.2.1

<RewardFrame>:

    # Background
    canvas.before:
        # Border
        Color:
            rgba: (0,0,0,1)
        Line:
            rounded_rectangle: [0,0,self.size[0],self.size[1],self.radius*self.font_ratio]
            width: BUTTON_OUTLINE_WIDTH*self.font_ratio

    MoneyLayout:
        coins_count: root.reward
        font_ratio: root.font_ratio
        size_hint: (1, 1)
        pos_hint: {"center_x": 0.5,"center_y":0.5}
        unit: root.unit
        and_mode: root.plus_mode

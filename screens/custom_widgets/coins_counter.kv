#:kivy 2.2.1

<CoinsCounter>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: (0, 0)
            size: self.size
            radius: [self.radius*self.font_ratio,]

    MoneyLayout:
        coins_count: root.coins_count
        font_ratio: root.font_ratio
        size_hint: (1, 1)
        pos_hint: {"center_x": 0.5,"center_y":0.5}
        unit: root.unit

    # Plus
    Label:
        text: "+"
        font_size: root.font_ratio * root.font_size * 1.6
        pos_hint: {"center_x":0.85, "center_y":0.5}
        size_hint: (1, None)
        font_name: root.text_font_name
        line_height: 1
        color: (0,0,0,1)
        opacity: 1 if root.display_plus else 0

#:kivy 2.2.1

<TutorialPopup>:
    
    RelativeLayout:
        id: popup_layout

        ColoredRoundedButton:
            id: next_button
            size_hint: (0.4,0.15)
            pos_hint: {"center_x":0.75,"center_y":0.12}
            font_ratio: root.font_ratio
            font_size: SMALL_BUTTON_FONT_SIZE
            text: root.next_button_label
            text_font_name: PATH_TEXT_FONT
            outline_color: (1,1,1,1)
            background_color: root.secondary_color
            touch_color: root.primary_color
            color_label: (1,1,1,1)
            release_function: root.go_to_next_page
            disabled: root.next_button_disabled
            opacity: 0 if root.bool_centered_button else 1
        
        ColoredRoundedButton:
            id: previous_button
            size_hint: (0.4,0.15)
            pos_hint: {"center_x":0.25,"center_y":0.12}
            font_ratio: root.font_ratio
            font_size: SMALL_BUTTON_FONT_SIZE
            text: root.previous_button_label
            text_font_name: PATH_TEXT_FONT
            outline_color: (1,1,1,1)
            background_color: root.secondary_color
            touch_color: root.primary_color
            color_label: (1,1,1,1)
            release_function: root.go_to_previous_page
            disabled: root.previous_button_disabled
            opacity: 0 if root.bool_centered_button else 1
        
        ColoredRoundedButton:
            id: centered_button
            size_hint: (0.4,0.15) if root.bool_centered_button else (0, 0.15)
            pos_hint: {"center_x":0.5,"center_y":0.12}
            font_ratio: root.font_ratio
            font_size: SMALL_BUTTON_FONT_SIZE
            text: "Close"
            text_font_name: PATH_TEXT_FONT
            outline_color: (1,1,1,1)
            background_color: root.secondary_color
            touch_color: root.primary_color
            color_label: (1,1,1,1)
            release_function: root.go_to_previous_page
            disabled: not root.bool_centered_button
            opacity: 1 if root.bool_centered_button else 0

        Label:
            id: center_label
            size_hint: (0.8,0.7)
            pos_hint: {"center_x":0.5,"top":0.95}
            font_size: CONTENT_LABEL_FONT_SIZE * root.font_ratio
            font_name: PATH_TEXT_FONT
            text: root.center_label_text
            size: self.size
            shorten: False
            text_size: (self.width,None)
            color: (0,0,0,1)
            halign: "center"
            valign: "middle"

        Label:
            id: side_label
            size_hint: (0.5,0.7)
            pos_hint: {"center_x":0.25,"top":0.95}
            font_size: CONTENT_LABEL_FONT_SIZE * root.font_ratio
            font_name: PATH_TEXT_FONT
            text: root.side_label_text
            size: self.size
            shorten: False
            text_size: (self.width,None)
            color: (0,0,0,1)
            halign: "center"
            valign: "middle"

        Label:
            id: top_label
            size_hint: (0.9, 0.35)
            pos_hint: {"center_x":0.5,"top":0.95}
            font_size: CONTENT_LABEL_FONT_SIZE * root.font_ratio
            font_name: PATH_TEXT_FONT
            text: root.top_label_text
            size: self.size
            shorten: False
            text_size: (self.width,None)
            color: (0,0,0,1)
            halign: "center"
            valign: "middle"

        Image:
            id: side_image
            source: root.side_image_source
            size_hint: (0.4,0.7)
            pos_hint: {"center_x":0.75,"top":0.95}
            fit_mode: "contain"
            opacity: 1 if root.side_image_disabled is False else 0

        Image:
            id: bottom_image
            source: root.bottom_image_source
            size_hint: (0.8,0.35)
            pos_hint: {"center_x":0.5,"y":0.25}
            fit_mode: "contain"
            opacity: 1 if root.bottom_image_disabled is False else 0

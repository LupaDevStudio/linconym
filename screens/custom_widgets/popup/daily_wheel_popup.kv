#:kivy 2.2.1



<DailyWheelPopup>:
    
    RelativeLayout:
        id: popup_layout
        
        RelativeLayout:
            size_hint: (0.8, 0.8)
            pos_hint: {"center_x":0.5, "center_y": 0.625}

            canvas.before:
                PushMatrix
                Rotate:
                    angle: root.angle
                    axis: 0, 0, 1
                    origin: self.width/2, self.height/2
            canvas.after:
                PopMatrix

            Image:
                id: my_image
                source: "resources/images/front_daily_wheel.png"
                size_hint: (1, 1)
                pos_hint: {'center_x': 0.5, "center_y": 0.5}
        
        Image:
            id: image
            source: "resources/images/back_daily_wheel.png"
            size_hint: (0.8, 0.8)
            pos_hint: {'center_x': 0.5, "center_y": 0.625}

        # # Reward frame for Lincoins

#:kivy 2.2.1



<DailyWheelPopup>:
    
    RelativeLayout:
        id: popup_layout
        
        RelativeLayout:
            canvas.before:
                PushMatrix
                Rotate:
                    angle: root.angle
                    axis: 0, 0, 1
                    origin: root.center
            canvas.after:
                PopMatrix

            Image:
                source: "resources/images/front_daily_wheel.png"
                size_hint: (0.5, 0.5)
                pos_hint: {'center_x': 0.5, "center_y": 0.5}
        
        Image:
            id: image
            source: "resources/images/back_daily_wheel.png"
            size_hint: (0.5, 0.5)
            pos_hint: {'center_x': 0.5, "center_y": 0.5}  
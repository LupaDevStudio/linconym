#:kivy 2.2.1
#:import OUTLINE_RECTANGLE_COLORED_ROUNDED_BUTTON tools.constants.OUTLINE_RECTANGLE_COLORED_ROUNDED_BUTTON

<ColoredRoundedButton>:

    # Background
    canvas.before:
        # Shadow
        Color:
            rgba: (0, 0, 0, 0.75) if not self.disable_button else (0,0,0,0)
        BoxShadow:
            pos: (0, 0)
            size: self.size
            offset: 5*self.font_ratio, -5*self.font_ratio
            spread_radius: -10*self.font_ratio, -10*self.font_ratio
            blur_radius: 20*self.font_ratio
        # Rounded rectangle
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos:(0, 0)
            size:self.size
            radius: [12*root.font_ratio]
        # Border
        Color:
            rgba: self.outline_color
        Line:
            width: self.outline_width*self.font_ratio
            rounded_rectangle: (-OUTLINE_RECTANGLE_COLORED_ROUNDED_BUTTON/2, -OUTLINE_RECTANGLE_COLORED_ROUNDED_BUTTON/2, self.size[0]+OUTLINE_RECTANGLE_COLORED_ROUNDED_BUTTON,self.size[1]+OUTLINE_RECTANGLE_COLORED_ROUNDED_BUTTON, 12*root.font_ratio, 12*root.font_ratio, 12*root.font_ratio, 12*root.font_ratio)

    # Main text
    Label:
        text: root.text
        font_size: root.font_ratio * root.font_size
        pos: (1, 0)
        size: self.size
        shorten: False
        text_size: (root.width*root.text_filling_ratio, None)
        font_name: root.text_font_name
        halign: "center"
        valign: "center"
        line_height: 1
        color: root.color_label

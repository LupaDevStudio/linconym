#:kivy 2.2.1

<BuyRectangleButton>:

    # Background
    canvas.before:
        # Border
        Color:
            rgba: (0,0,0,1) if self.mode == "line" else (0, 0, 0, 0)
        Line:
            rounded_rectangle: [0,0,self.size[0],self.size[1],self.radius*self.font_ratio]
            width: BUTTON_OUTLINE_WIDTH*self.font_ratio
        
        # White background
        Color:
            rgba: (0,0,0,0) if self.mode == "line" else self.background_color
        RoundedRectangle:
            size: self.size
            pos: (0, 0)
            radius: [self.radius*self.font_ratio]

    MoneyLayout:
        coins_count: root.price
        font_ratio: root.font_ratio
        size_hint: (1, 1)
        pos_hint: {"center_x": 0.5,"center_y":0.5}

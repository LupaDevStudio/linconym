#:kivy 2.2.1

<SideImageButton>:

    # Background
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos:(0,0)
            size:self.size
            radius:[25*self.font_ratio,]

    # Label
    Label:
        text: root.text
        font_size: root.font_ratio * MAIN_BUTTON_FONT_SIZE
        pos_hint: {"center_x":0.4, "center_y":0.5}
        size_hint: (1, None)
        font_name: root.text_font_name
        line_height: 1
        color: (0,0,0,1)

    # Side image
    Image:
        source: root.side_image_source
        pos_hint: {"center_x":0.8,"center_y":0.5}
        size_hint: (None,0.6)
        width: self.height
        fit_mode: "contain"
        color: (0, 0, 0, 1) if root.icon_mode else (1, 1, 1, 1)

#:kivy 2.2.1

<CreditsScreen>:

    # Credits scrollview
    CustomScrollview:
        id: scrollview
        pos_hint: {"center_x":0.49, "y":0.125}
        size_hint: (0.98,0.7)
        bar_width: 7*root.font_ratio
        bar_color: root.primary_color
        bar_inactive_color: root.secondary_color

        MyScrollViewLayout:
            id: scrollview_layout
            cols:1
            spacing: 20*root.font_ratio
            #height:0.07*root.height*root.number_lines_credits*1.08
            # height: self.minimum_height
            padding: (0.05*root.width, 12*root.font_ratio, 0.05*root.width, 40*root.font_ratio)

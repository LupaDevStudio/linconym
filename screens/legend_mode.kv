#:kivy 2.2.1
#:import GAMEPLAY_LEGEND_DICT tools.constants.GAMEPLAY_LEGEND_DICT

<LegendModeScreen>:

    CustomScrollview:
        id: scrollview
        pos_hint: {"center_x":0.49, "center_y":0.475}
        size_hint: (0.98,0.7)
        bar_width: 7*root.font_ratio
        bar_color: root.primary_color
        bar_inactive_color: root.secondary_color

        MyScrollViewLayout:
            id: scrollview_layout
            cols:1
            spacing:40
            height:0.2*root.height * len(GAMEPLAY_LEGEND_DICT)
            padding: (0.05*root.width, 0,0.05*root.width,40)

#:kivy 2.2.1

<ProfileScreen>:

    # Badge for the status
    RoundedButtonImage:
        id: badge_image
        image_path: root.user_status_image
        pos_hint: {"x":0.1, "y":0.71}
        size_hint: (None, 0.12)
        width: self.height
        radius: 100
        font_ratio: root.font_ratio
        release_function: root.open_badges
        is_icon_color: False

    # Status and level
    Label:
        text: root.user_status
        font_name: PATH_TITLE_FONT
        font_size: 16 * root.font_ratio
        x: badge_image.width + 0.15 * root.width
        pos_hint: {"y":0.8}
        size_hint: (0.25, 0.05)
        text_size: self.size
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR
        halign: "left"
    Label:
        text: root.user_level
        font_name: PATH_TITLE_FONT
        font_size: 16 * root.font_ratio
        pos_hint: {"right":0.9, "y":0.8}
        size_hint: (0.25, 0.05)
        text_size: self.size
        outline_width: TITLE_OUTLINE_WIDTH
        outline_color: TITLE_OUTLINE_COLOR
        color: TEXT_FONT_COLOR
        halign: "right"

    # Experience counter
    ExperienceCounter:
        id: exp_counter
        size_hint: (None, 0.07)
        x: badge_image.width + 0.15 * root.width
        width: 0.9*root.width - self.x
        pos_hint: {"y":0.71}
        font_ratio: root.font_ratio
        label_left: "Exp"
        experience_displayed: 0
        percentage_experience_before: root.percentage_experience
        percentage_experience_won: 0
        primary_color: root.primary_color
        secondary_color: root.secondary_color

    # Lincoins counter
    CoinsCounter:
        size_hint: (0.6, 0.07)
        pos_hint: {"center_x":0.5, "center_y":0.625}
        font_ratio: root.font_ratio
        coins_count: root.lincoins_count
        unit: "lincoin"
        release_function: root.go_to_boosters

    # Linclues counter
    CoinsCounter:
        size_hint: (0.6, 0.07)
        pos_hint: {"center_x":0.5, "center_y":0.525}
        font_ratio: root.font_ratio
        coins_count: root.linclues_count
        unit: "linclue"
        release_function: root.go_to_boosters

    # Classic mode achievements
    CustomContentButton:
        size_hint: (0.8, 0.25)
        pos_hint: {"center_x":0.5, "center_y":0.3}
        font_ratio: root.font_ratio
        title: "Classic mode"
        content: root.classic_mode_achievements
        release_function: root.open_achievements_classic


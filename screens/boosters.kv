#:kivy 2.2.1

<BoostersScreen>:

    # Coins counters
    CoinsCounter:
        size_hint: (0.4, 0.07)
        pos_hint: {"center_x":0.25, "center_y":0.81}
        font_ratio: root.font_ratio
        coins_count: root.lincoins_count
        unit: "lincoin"
        display_plus: False
        disable_button: True
    CoinsCounter:
        size_hint: (0.4, 0.07)
        pos_hint: {"center_x":0.75, "center_y":0.81}
        font_ratio: root.font_ratio
        coins_count: root.linclues_count
        unit: "linclue"
        display_plus: False
        disable_button: True

    # Daily ads boosters
    BoosterLayout:
        booster_title: "Daily ads"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
        size_hint: 0.9, 0.19
        list_infos: root.list_daily_ads
        font_ratio: root.font_ratio

    # Weekly ads boosters
    BoosterLayout:
        booster_title: "Weekly ad"
        pos_hint: {"center_x": 0.25, "center_y": 0.45}
        size_hint: 0.4, 0.19
        list_infos: root.list_weekly_ads
        font_ratio: root.font_ratio

    # Conversion booster
    BoosterLayout:
        booster_title: "Conversion"
        pos_hint: {"center_x": 0.75, "center_y": 0.45}
        size_hint: 0.4, 0.19
        list_infos: root.list_conversion
        font_ratio: root.font_ratio

    # Buy boosters
    BoosterLayout:
        booster_title: "Purchases"
        pos_hint: {"center_x": 0.5, "center_y": 0.25}
        size_hint: 0.9, 0.19
        list_infos: root.list_buy
        font_ratio: root.font_ratio
